{
  "name" : "TabX",
  "version" : "1.0",
  "description" : "Writing assistant for browsers",

  "background": {
    "scripts": ["scripts/init.js", "scripts/models.js"],
    "persistent": true
  },

   "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": [ "scripts/jquery-3.3.1.min.js","scripts/tabx.js"]
   }],

   "icons": { "16": "assets/img/tabx16.png",
              "32": "assets/img/tabx32.png",
              "48": "assets/img/tabx48.png",
             "128": "assets/img/tabx128.png"},

  "permissions": ["storage",
    "activeTab",
    "<all_urls>"],

  "browser_action":
  {
    "default_popup": "./assets/popup/popup.html"
  },

  "options_page" : "./assets/settingspage/settings.html",

  "manifest_version": 2
}
