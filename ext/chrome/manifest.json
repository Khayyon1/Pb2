{
  "name" : "TabX",
  "version" : "1.0",
  "description" : "Writing assistant for browsers",

  "background": {
    "scripts": ["scripts/loader.js", "scripts/models.js"],
    "persistent": true
  },

  "permissions": ["storage",
    "activeTab",
    "<all_urls>"],

  "browser_action":
  {
    "default_popup": "./assets/html/popup.html"
  },

  "manifest_version": 2
}

