{
  "name" : "TabX",
  "version" : "1.0",
  "description" : "Writing assistant for browsers",
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": ["storage"],
  "browser_action":
  {
    "default_popup": "./assets/html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/main.js"]
    }
  ],
  "manifest_version" : 2
}
