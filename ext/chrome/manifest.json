{
  "name" : "TabX",
  "version" : "1.0",
  "description" : "Writing assistant for browsers",

  "background": {
    "scripts": ["scripts/models.js"],
    "persistent": true
  },

   "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["scripts/tabx.js"]
   }],

  "permissions": ["storage",
    "activeTab",
    "<all_urls>"],

  "browser_action":
  {
    "default_popup": "./assets/html/popup.html"
  },

  "manifest_version": 2
}
